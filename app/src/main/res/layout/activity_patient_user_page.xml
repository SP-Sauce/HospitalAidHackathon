<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¥ Patient Portal"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="24dp"
            android:background="@color/purple_500"
            android:textColor="@android:color/white" />

        <!-- LOGIN SECTION -->
        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access Your Medical Records"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:textColor="@color/purple_700" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your details to view your medical information"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="32dp"
                android:textColor="@android:color/darker_gray" />

            <!-- Login Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ Patient Login"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/purple_700" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="Full Name"
                        app:boxStrokeColor="@color/purple_500"
                        app:hintTextColor="@color/purple_700">

                        <EditText
                            android:id="@+id/edit_patient_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:hint="Patient ID Number"
                        app:boxStrokeColor="@color/purple_500"
                        app:hintTextColor="@color/purple_700">

                        <EditText
                            android:id="@+id/edit_patient_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/button_login"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="ðŸ” Access My Records"
                        android:textSize="16sp"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- PATIENT INFO SECTION (View-Only) -->
        <LinearLayout
            android:id="@+id/layout_patient_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/text_welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, John Doe!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:textColor="@color/purple_700"
                android:background="@android:color/background_light"
                android:padding="16dp" />

            <!-- Patient Information Card (Like Wireframe) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:background="@color/purple_500">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ðŸ“‹ Hospital Data"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:drawablePadding="8dp" />

                    </LinearLayout>

                    <!-- ID and Name Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <!-- ID Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@android:color/background_light"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700" />

                            <TextView
                                android:id="@+id/text_patient_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="001"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray" />

                        <!-- Name Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Name"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700" />

                            <TextView
                                android:id="@+id/text_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Horizontal Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <!-- Age and Gender Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal">

                        <!-- Age Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@android:color/background_light"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700" />

                            <TextView
                                android:id="@+id/text_patient_age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray" />

                        <!-- Gender Column -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@android:color/white"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700" />

                            <TextView
                                android:id="@+id/text_patient_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textSize="18sp"
                                android:textColor="@android:color/black"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Horizontal Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <!-- Condition Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/background_light"
                        android:padding="16dp"
                        android:minHeight="120dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Condition"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_patient_condition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fever and headache"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:gravity="center"
                            android:background="@android:color/white"
                            android:padding="12dp"
                            android:minHeight="60dp" />

                    </LinearLayout>

                    <!-- Horizontal Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <!-- Hospital Status Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white"
                        android:padding="16dp"
                        android:minHeight="120dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hospital Status"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/text_patient_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Outpatient"
                            android:textSize="16sp"
                            android:textColor="@color/teal_700"
                            android:gravity="center"
                            android:background="@android:color/background_light"
                            android:padding="12dp"
                            android:minHeight="40dp" />

                        <!-- Admission Details (only visible if admitted) -->
                        <LinearLayout
                            android:id="@+id/card_admission_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/text_ward_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ward: ICU"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/text_admission_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Admitted: 15/01/2025"
                                android:textSize="14sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Progress Notes:"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/purple_700"
                                android:gravity="center"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/text_progress_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Patient showing improvement. Vital signs stable."
                                android:textSize="12sp"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                android:background="@android:color/background_light"
                                android:padding="8dp"
                                android:minHeight="40dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸšª Logout"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/purple_700" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>