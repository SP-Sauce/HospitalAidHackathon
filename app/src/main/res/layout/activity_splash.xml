<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash_background"
    android:padding="32dp">

    <!-- SHIFAA Logo -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="24dp"
        android:scaleType="centerInside" />

    <!-- App Title - SHIFAA with Arabic -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHIFAA (شفاء)"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FF1976D2"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Full Name -->
    <TextView
        android:id="@+id/app_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Hospital Information File\nAdministrative Application"
        android:textSize="12sp"
        android:textColor="#FF424242"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp" />

    <!-- Subtitle - Meaning -->
    <TextView
        android:id="@+id/hospital_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Healing • Cure • Recovery"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#FF1976D2"
        android:gravity="center" />

    <!-- Loading indicator -->
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp" />

    <!-- Version info -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="v1.0"
        android:textSize="12sp"
        android:textColor="#FF9E9E9E" />

</LinearLayout>